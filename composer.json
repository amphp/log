{
    "name": "amphp/log",
    "homepage": "https://github.com/amphp/log",
    "description": "Non-blocking logging for PHP based on Amp.",
    "keywords": [
        "log",
        "logging",
        "logger",
        "async",
        "non-blocking",
        "amp",
        "amphp"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Aaron Piotrowski",
            "email": "aaron@trowski.com"
        },
        {
            "name": "Niklas Keller",
            "email": "me@kelunik.com"
        }
    ],
    "require": {
        "amphp/amp": "^2",
        "amphp/byte-stream": "^1.3",
        "psr/log": "^1"
    },
    "require-dev": {
        "amphp/file": "^0.3",
        "amphp/phpunit-util": "^1",
        "friendsofphp/php-cs-fixer": "^2.3",
        "phpunit/phpunit": "^6",
        "infection/infection": "^0.7.1"
    },
    "autoload": {
        "psr-4": {
            "Amp\\Log\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Amp\\Log\\Test\\": "test"
        }
    },
    "config": {
        "platform": {
            "php": "7.0.13"
        }
    },
    "scripts": {
        "test": "@php -dzend.assertions=1 -dassert.exception=1 ./vendor/bin/phpunit",
        "code-style": "@php ./vendor/bin/php-cs-fixer fix"
    }
}
